<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent"
                tools:layout_editor_absoluteY="87dp" tools:layout_editor_absoluteX="0dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:text="@string/title"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/Titel"/>

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/input"
                    android:layout_marginTop="50dp"
                    android:inputType="text"
                    android:hint="enter pokemon name"/>

            <ImageView
                    android:id="@+id/pokemonPic"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:contentDescription="pokemon_pic"
                    android:src="@mipmap/ic_launcher"/>

            <ProgressBar
                    android:id="@+id/progressBar1"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"/>
            <TextView
                    android:text="@string/pokemon_details"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/poke_details"/>

            <Button
                    android:id="@+id/getpokemon"
                    android:layout_width="match_parent"
                    android:text="@string/buttonText"
                    android:layout_height="50dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>